interface IKRC20 {
    function burn(uint256 amount) external;
    function burnFrom(address account, uint256 amount) external;
}

interface IMonsterGeneScience {
    function isGeneScience() external pure returns (bool);
    function randomGene0(uint256 nonce) external view returns (uint256 genes);
}

interface IMonsterCore {
    function createMonster(
        uint256 _matronId,
        uint256 _sireId,
        uint256 _generation,
        uint256 _genes,
        address _owner
    ) external returns (uint256);
}


contract BLKRedeemMonster is Ownable, Pausable, ReentrancyGuard {
    
    using SafeMath for uint256;
    
    uint256 public constant MONSTER_PRICE = 250 * 10**18;
    address public blk = address(0xe8E41385b4Dd2Df285b3E48b0B59bDb4dFBAaaF2);
    address public monsterCoreContract = address(0xc66BA8C9E149B5d3977Dfa73cE8DDEDEB90C28aA);
    address public geneScience = address(0x2E0077296413cB626b1E12827B43823151e9B045);
    uint256 public monsterRemain = 200;
    uint256 nonce;
    
    function redeemMonster () public nonReentrant {
        require(monsterRemain > 0, "Monster number exceeds remaining pool");
        IKRC20(blk).burnFrom(_msgSender(), MONSTER_PRICE);
        require(IMonsterGeneScience(geneScience).isGeneScience(), "Make sure GENE_SCIENCE is exact.");
        uint256 _genes = IMonsterGeneScience(geneScience).randomGene0(nonce);
        IMonsterCore(monsterCoreContract).createMonster(0, 0, 0, _genes, _msgSender());
        nonce++;
        monsterRemain--;
    }
    
    function setGenecience(address _geneScience) external onlyOwner {
        geneScience = _geneScience;
    }

    function setMonsterCore(address _monsterCore) external onlyOwner {
        monsterCoreContract = _monsterCore;
    }

    function pause() external onlyOwner {
        _pause();
    }

    function unpause() external onlyOwner {
        _unpause();
    }
}